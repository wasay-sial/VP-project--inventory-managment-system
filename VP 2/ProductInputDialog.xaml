<Window x:Class="VP_2.ProductInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Input" Height="331" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Product ID:"/>
            <TextBox Name="ProductIdTextBox" Margin="0,5" />

            <TextBlock Text="Product Name:"/>
            <TextBox Name="ProductNameTextBox" Margin="0,5" />

            <TextBlock Text="Quantity:"/>
            <TextBox Name="QuantityTextBox" Margin="0,5" />

            <TextBlock Text="Price:"/>
            <TextBox Name="PriceTextBox" Margin="0,5" />

            <TextBlock Text="Category ID:"/>
            <TextBox Name="CategoryIdTextBox" Margin="0,5" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                <Button Name="OkButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
                <Button Name="CancelButton" Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
